<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="#F0F0F0"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#EEEEEE">

                <ImageView
                    android:id="@+id/imgAvatarPost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_notification"
                    app:tint="@null" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvPostTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vá»«a xong"
                    android:textColor="#777777"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOST"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#D32F2F"
                android:background="@drawable/bg_label_rounded"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />
        </LinearLayout>

        <!-- Content -->
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ná»™i dung bÃ i Ä‘Äƒng..."
            android:paddingHorizontal="12dp"
            android:paddingBottom="6dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"/>

        <!-- âœ… Address (Ä‘á»‹a Ä‘iá»ƒm máº¥t/nháº·t) -->
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingBottom="4dp"
            android:text="ðŸ“ Äá»‹a Ä‘iá»ƒm: ..."
            android:textColor="#444444"
            android:textSize="13sp" />

        <!-- âœ… Contact -->
        <TextView
            android:id="@+id/tvContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingBottom="8dp"
            android:text="â˜Ž LiÃªn há»‡: ..."
            android:textColor="#444444"
            android:textSize="13sp" />

        <!-- Image -->
        <ImageView
            android:id="@+id/imgPostImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:background="#F8F8F8"
            android:src="@android:drawable/ic_menu_gallery"/>

        <!-- âœ… View all comments -->
        <TextView
            android:id="@+id/tvViewAllComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Xem táº¥t cáº£ bÃ¬nh luáº­n (0)"
            android:textColor="#1976D2"
            android:textStyle="bold"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE" />

        <!-- Comment composer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etComment"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:hint="Viáº¿t bÃ¬nh luáº­n..."
                android:background="@drawable/bg_label_rounded"
