<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootNotify"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imgNotifyAvatar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_notification"
        android:scaleType="centerCrop"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvNotifyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên người dùng"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#111111" />

        <TextView
            android:id="@+id/tvNotifyContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung bình luận..."
            android:textSize="13sp"
            android:textColor="#444444"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvNotifyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01 08:00"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvUnreadDot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@android:drawable/presence_online"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"/>
</LinearLayout>
