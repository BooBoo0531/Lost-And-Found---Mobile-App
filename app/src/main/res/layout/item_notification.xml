<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootNotify"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="@android:color/white">

    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/imgNotifyAvatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_notification"
            android:scaleType="centerCrop"
            android:background="#EEEEEE"
            android:padding="6dp" />

        <!-- chấm đỏ cho từng dòng (unread) -->
        <View
            android:id="@+id/dotUnread"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="end|top"
            android:background="@android:drawable/presence_busy"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/tvNotifyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo"
            android:textStyle="bold"
            android:textColor="#111111"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvNotifyContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung..."
            android:textColor="#444444"
            android:textSize="13sp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tvNotifyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vừa xong"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

</LinearLayout>
