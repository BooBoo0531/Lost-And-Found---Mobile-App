<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết thông báo"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111111"
            android:paddingBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:cardCornerRadius="26dp"
                app:cardElevation="0dp"
                android:backgroundTint="#EEEEEE">

                <ImageView
                    android:id="@+id/imgDetailAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_notification"
                    android:padding="6dp"
                    android:scaleType="centerInside" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvDetailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvDetailType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bình luận"
                    android:textColor="#666666"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvDetailTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2025 08:00"
                    android:textColor="#888888"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvDetailMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung..."
            android:textColor="#222222"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/tvPostLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bài viết liên quan"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#111111"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp" />

        <include
            android:id="@+id/includePostPreview"
            layout="@layout/item_post_map" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
