<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiết thông báo"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#111111"
        android:paddingBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgDetailAvatar"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_notification"
            android:padding="6dp"
            android:background="#EEEEEE" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvDetailType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bình luận"
                android:textColor="#666666"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvDetailTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2025 08:00"
                android:textColor="#888888"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvDetailMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung..."
        android:textColor="#222222"
        android:textSize="14sp"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnOpenComments"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="MỞ BÌNH LUẬN"
        android:layout_marginTop="16dp"/>
</LinearLayout>
