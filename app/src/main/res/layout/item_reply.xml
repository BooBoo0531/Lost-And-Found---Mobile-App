<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="0dp"
    android:paddingTop="8dp"
    android:paddingBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">

        <androidx.cardview.widget.CardView
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#EEEEEE">

            <ImageView
                android:id="@+id/imgAvatarReply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_notification"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tvNameReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserReply"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#111111"/>

            <TextView
                android:id="@+id/tvTextReply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung reply..."
                android:textColor="#333333"
                android:textSize="13sp"
                android:layout_marginTop="1dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/tvTimeReply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00"
                    android:textSize="11sp"
                    android:textColor="#777777"/>

                <TextView
                    android:id="@+id/btnReplySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trả lời"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgReply"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="6dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:background="#F5F5F5"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>