<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- ===================== HEADER + SEARCH ===================== -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/viewHeaderBg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#F07A7A"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost and Found"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvSearchBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    app:tint="#999999"/>

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Search for lost items..."
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="14sp"
                    android:paddingHorizontal="12dp"
                    android:singleLine="true"
                    android:imeOptions="actionSearch"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ===================== FRAGMENT CONTENT ===================== -->

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách bài đăng sẽ hiển thị ở đây"
            android:textColor="#999999"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"/>
    </FrameLayout>

    <!-- ===================== BOTTOM BAR ===================== -->

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@android:color/white"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabAlignmentMode="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/btnNavHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/nav_history"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_history"
                    android:padding="12dp"
                    app:tint="#555555"
                    android:contentDescription="History"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textSize="12sp"
                    android:textColor="#555555"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnNavMap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/nav_map"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_map"
                    android:padding="12dp"
                    app:tint="#555555"
                    android:contentDescription="Map"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Map"
                    android:textSize="12sp"
                    android:textColor="#555555"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/btnNavNotify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/nav_notification"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_notification"
                    android:padding="12dp"
                    app:tint="#555555"
                    android:contentDescription="Notification"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notify"
                    android:textSize="12sp"
                    android:textColor="#555555"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnNavSetting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/nav_setting"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_setting"
                    android:padding="12dp"
                    app:tint="#555555"
                    android:contentDescription="Setting"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Setting"
                    android:textSize="12sp"
                    android:textColor="#555555"/>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.bottomappbar.BottomAppBar>

    <TextView
        android:id="@+id/tvFoundLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Found"
        android:textColor="#388E3C"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="@drawable/bg_label_rounded"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:elevation="10dp"
        android:visibility="invisible"
        android:layout_marginEnd="90dp"
        app:layout_anchor="@id/fabCreatePost"
        app:layout_anchorGravity="start|center_vertical"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/ic_add"
        app:tint="@android:color/white"
        app:backgroundTint="#388E3C"
        android:visibility="invisible"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"
        android:elevation="6dp"/>

    <TextView
        android:id="@+id/tvLostLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lost"
        android:textColor="#D32F2F"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="@drawable/bg_label_rounded"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:elevation="10dp"
        android:visibility="invisible"
        android:layout_marginEnd="90dp"
        app:layout_anchor="@id/fabCreatePost"
        app:layout_anchorGravity="start|center_vertical"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/ic_search"
        app:tint="@android:color/white"
        app:backgroundTint="#D32F2F"
        android:visibility="invisible"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"
        android:elevation="6dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCreatePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        app:tint="@android:color/white"
        app:backgroundTint="#F07A7A"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"
        app:maxImageSize="32dp"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:contentDescription="Create Post"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home"
        app:tint="@android:color/white"
        app:backgroundTint="#F07A7A"
        app:layout_anchor="@id/bottomAppBar"
        app:maxImageSize="30dp"
        android:contentDescription="Home Button"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
