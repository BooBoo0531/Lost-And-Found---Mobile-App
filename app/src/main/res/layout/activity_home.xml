<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F07A7A"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="#F07A7A"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"

            app:title="Lost and Found"
            app:collapsedTitleTextColor="@android:color/white"
            app:expandedTitleTextColor="#333333"

            app:collapsedTitleGravity="center"
            app:expandedTitleGravity="center_horizontal|top"
            app:expandedTitleMarginTop="20dp"

            app:expandedTitleTextAppearance="@style/ExpandedType"
            app:collapsedTitleTextAppearance="@style/CollapsedType">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvSearchBar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="65dp"
                android:layout_marginBottom="18dp"
                android:layout_marginHorizontal="24dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        app:tint="#999999"/>

                    <EditText
                        android:id="@+id/edtSearchHome"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:background="@null"
                        android:hint="Tìm đồ thất lạc..."
                        android:textColorHint="#999999"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:imeOptions="actionSearch"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:id="@+id/btnClearSearch"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        app:tint="#999999"
                        android:visibility="gone"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageView
                        android:id="@+id/btnCameraSearch"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_camera"
                        app:tint="#F07A7A"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:elevation="0dp"
                app:titleCentered="true"

                app:title="Lost and Found"

                app:titleTextColor="@android:color/white"

                app:contentInsetStart="0dp"
                app:contentInsetEnd="60dp">

                <ImageView
                    android:id="@+id/btnSearchSmall"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_search"
                    android:padding="12dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="27dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@android:color/white"
                    android:visibility="invisible"
                    android:clickable="true"
                    android:focusable="true"/>

            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginBottom="?attr/actionBarSize">
    </FrameLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@android:color/white"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabAlignmentMode="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:paddingVertical="4dp">

            <LinearLayout
                android:id="@+id/btnNavHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">
                <ImageView android:id="@+id/nav_history" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_history" app:tint="#555555"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="History" android:textSize="10sp" android:textColor="#555555" android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnNavMap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">
                <ImageView android:id="@+id/nav_map" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_map" app:tint="#555555"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Map" android:textSize="10sp" android:textColor="#555555" android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <View android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1" android:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/btnNavNotify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">

                <FrameLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp">

                    <ImageView
                        android:id="@+id/nav_notification"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_notification"
                        android:layout_gravity="center"
                        app:tint="#555555"/>

                    <View
                        android:id="@+id/viewNotifyDot"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:layout_gravity="end|top"
                        android:background="@drawable/bg_dot_red"
                        android:visibility="gone"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notify"
                    android:textSize="10sp"
                    android:textColor="#555555"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnNavSetting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true">
                <ImageView android:id="@+id/nav_setting" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_setting" app:tint="#555555"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Setting" android:textSize="10sp" android:textColor="#555555" android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>

    <TextView
        android:id="@+id/tvFoundLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Found"
        android:textColor="#388E3C"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="@drawable/bg_label_rounded"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:elevation="10dp"
        android:visibility="invisible"
        android:layout_marginEnd="90dp"
        app:layout_anchor="@id/fabCreatePost"
        app:layout_anchorGravity="start|center_vertical"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/ic_add"
        app:tint="@android:color/white"
        app:backgroundTint="#388E3C"
        android:visibility="invisible"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"
        app:elevation="6dp"/>

    <TextView
        android:id="@+id/tvLostLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lost"
        android:textColor="#D32F2F"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="@drawable/bg_label_rounded"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:elevation="10dp"
        android:visibility="invisible"
        android:layout_marginEnd="90dp"
        app:layout_anchor="@id/fabCreatePost"
        app:layout_anchorGravity="start|center_vertical"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/ic_search"
        app:tint="@android:color/white"
        app:backgroundTint="#D32F2F"
        android:visibility="invisible"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"
        app:elevation="6dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCreatePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        app:tint="@android:color/white"
        app:backgroundTint="#F07A7A"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"
        app:maxImageSize="32dp"
        app:elevation="8dp"
        app:pressedTranslationZ="12dp"
        android:contentDescription="Create Post"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabOpenChatList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_dialog_email"
        app:tint="@android:color/white"
        app:backgroundTint="#2196F3"

        android:layout_gravity="bottom|start"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="90dp"

        app:elevation="8dp"
        app:maxImageSize="28dp"
        android:contentDescription="Hộp thư" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home"
        app:tint="#F07A7A"
        app:backgroundTint="@android:color/white"
        app:layout_anchor="@id/bottomAppBar"
        app:maxImageSize="30dp"
        android:contentDescription="Home Button"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>