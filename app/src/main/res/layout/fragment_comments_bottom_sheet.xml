<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCommentsSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bình luận"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#111111"
        android:paddingBottom="8dp"/>

    <LinearLayout
        android:id="@+id/replyBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="8dp"
        android:background="#F3F4F6">

        <TextView
            android:id="@+id/tvReplyingTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đang trả lời..."
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/btnCancelReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Huỷ"
            android:textStyle="bold"
            android:textColor="#D32F2F"/>
    </LinearLayout>

    <!-- List co giãn -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:paddingBottom="8dp"/>

    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:background="#EEEEEE"
        android:layout_marginTop="8dp" />

    <!-- Input bar -->
    <LinearLayout
        android:id="@+id/inputBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/btnPickImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_gallery"
            app:tint="#F07A7A"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <EditText
            android:id="@+id/etCommentContent"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:hint="Viết bình luận..."
            android:paddingHorizontal="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_label_rounded"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            android:maxLines="3"/>

        <ImageView
            android:id="@+id/btnSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_send"
            app:tint="#F07A7A"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

</LinearLayout>
