<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/headerHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F07A7A"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_history"
            app:tint="#FFFFFF"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#40000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="Lịch sử"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="62dp"
        android:padding="12dp"
        android:clipToPadding="false" />

    <ProgressBar
        android:id="@+id/progressBarHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="#F07A7A" />

    <LinearLayout
        android:id="@+id/layoutEmptyHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="62dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvEmptyHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa đăng bài viết nào."
            android:textSize="16sp"
            android:textColor="#444444"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvGoNewsFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bấm để xem bài đăng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#F07A7A"
            android:paddingTop="12dp" />
    </LinearLayout>

</FrameLayout>
